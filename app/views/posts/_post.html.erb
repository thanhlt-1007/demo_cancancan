<tr>
  <td><%= post_counter + 1 %></td>
  <td><%= truncate post.title, length: 30 %></td>
  <td><%= truncate post.content, length: 100 %></td>
  <td style="text-align: right;">
    <% if can? :update, post %>
      <%= link_to edit_post_path(post), class: "btn btn-warning" do %>
        <span class="glyphicon glyphicon glyphicon-pencil"></span>
      <% end %>  
    <% end %>

    <% if can? :destroy, post %>
      <%= link_to post_path(post), method: :DELETE, class: "btn btn-danger" do %>
        <span class="glyphicon glyphicon glyphicon-trash"></span>
      <% end %>  
    <% end %>

    <% if can? :read, post %>
      <%= link_to post_path(post), class: "btn btn-info" do %>
        <span class="glyphicon glyphicon glyphicon-eye-open"></span>
      <% end %>
    <% end %>
  </td>
</tr>
